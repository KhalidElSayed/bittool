<manifest xmlns:android="http://schemas.android.com/apk/res/android" android:versionCode="1" android:versionName="0.1" package="com.vinnymac.bittool">

    <uses-sdk android:minSdkVersion="18" android:targetSdkVersion="19"/>

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application android:allowBackup="true" android:icon="@drawable/ic_launcher" android:label="@string/app_name" android:theme="@style/Theme.Gold">
        <activity android:label="@string/app_name" android:name="com.vinnymac.bittool.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:label="@string/app_name" android:name="com.vinnymac.bittool.MainActivity">
            <intent-filter>
                <action android:name="com.vinnymac.bittool.MAINACTIVITY"/>

                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
        <activity android:label="@string/app_name" android:name="com.vinnymac.bittool.AboutActivity">
            <intent-filter>
                <action android:name="com.vinnymac.bittool.ABOUT"/>

                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
        <activity android:label="@string/app_name" android:name="com.vinnymac.bittool.PreferenceActivity">
            <intent-filter>
                <action android:name="com.vinnymac.bittool.QUICKPREF"/>

                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
    </application>

</manifest>
