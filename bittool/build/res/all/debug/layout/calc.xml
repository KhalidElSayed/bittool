<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true" >

    <TextView
        android:id="@+id/tvResult_BTC"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:text="1 BTC"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    
        <!-- @string/calc -->

    <LinearLayout
        android:id="@+id/zero_linear"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvResult_BTC"
        android:orientation="horizontal"
        android:paddingBottom="1.0dip"
        android:paddingLeft="4.0dip"
        android:paddingRight="4.0dip"
        android:paddingTop="5.0dip" >

        <TextView
            android:id="@+id/tvResult_USD"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@id/tvResult_BTC"
            android:gravity="center"
            android:text="$ 0.00"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/first_linear"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/zero_linear"
        android:background="@android:drawable/bottom_bar"
        android:orientation="horizontal"
        android:paddingBottom="1.0dip"
        android:paddingLeft="4.0dip"
        android:paddingRight="4.0dip"
        android:paddingTop="5.0dip" >

        <Button
            android:id="@+id/button_number_one"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_below="@id/tvResult_USD"
            android:layout_weight="1.0"
            android:onClick="btn1Clicked"
            android:text="1" />

        <Button
            android:id="@+id/button_number_two"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_below="@id/tvResult_USD"
            android:layout_toRightOf="@id/button_number_one"
            android:layout_weight="1.0"
            android:onClick="btn2Clicked"
            android:text="2" />

        <Button
            android:id="@+id/button_number_three"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_below="@id/tvResult_USD"
            android:layout_toRightOf="@id/button_number_two"
            android:layout_weight="1.0"
            android:onClick="btn3Clicked"
            android:text="3" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/second_linear"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/first_linear"
        android:background="@android:drawable/bottom_bar"
        android:orientation="horizontal"
        android:paddingBottom="1.0dip"
        android:paddingLeft="4.0dip"
        android:paddingRight="4.0dip"
        android:paddingTop="5.0dip" >

        <Button
            android:id="@+id/button_number_four"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_below="@id/tvResult_USD"
            android:layout_weight="1.0"
            android:onClick="btn4Clicked"
            android:text="4" />

        <Button
            android:id="@+id/button_number_five"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_below="@id/tvResult_USD"
            android:layout_toRightOf="@id/button_number_four"
            android:layout_weight="1.0"
            android:onClick="btn5Clicked"
            android:text="5" />

        <Button
            android:id="@+id/button_number_six"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_below="@id/tvResult_USD"
            android:layout_toRightOf="@id/button_number_five"
            android:layout_weight="1.0"
            android:onClick="btn6Clicked"
            android:text="6" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/third_linear"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/second_linear"
        android:background="@android:drawable/bottom_bar"
        android:orientation="horizontal"
        android:paddingBottom="1.0dip"
        android:paddingLeft="4.0dip"
        android:paddingRight="4.0dip"
        android:paddingTop="5.0dip" >

        <Button
            android:id="@+id/button_number_seven"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_below="@id/tvResult_USD"
            android:layout_weight="1.0"
            android:onClick="btn7Clicked"
            android:text="7" />

        <Button
            android:id="@+id/button_number_eight"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_below="@id/tvResult_USD"
            android:layout_toRightOf="@id/button_number_seven"
            android:layout_weight="1.0"
            android:onClick="btn8Clicked"
            android:text="8" />

        <Button
            android:id="@+id/button_number_nine"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_below="@id/tvResult_USD"
            android:layout_toRightOf="@id/button_number_eight"
            android:layout_weight="1.0"
            android:onClick="btn9Clicked"
            android:text="9" />
    </LinearLayout>
